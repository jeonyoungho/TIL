package kr.ac.hansung.model;

import javax.validation.constraints.Email;
import javax.validation.constraints.NotEmpty;
import javax.validation.constraints.Size;

import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

@Getter
@Setter
@NoArgsConstructor
@ToString
//나중에 객체를 출력할때 사용!
public class Offer {
	
	@Email(message="Please provide a valid email address")
	@NotEmpty(message="The email address cannot be empty")
	private int id;
	
	@Size(min=0, max=20, message="year must be between 2 and 100 chars")
	@NotEmpty(message="The email address cannot be empty")
	private int year;
	
	private int semester;
	
	@Size(min=0, max=10, message="code must be between 2 and 100 chars")
	@NotEmpty(message="The email address cannot be empty")
	private String code;
	
	@Size(min=0, max=20, message="coursename must be between 2 and 100 chars")
	@NotEmpty(message="The email address cannot be empty")
	private String coursename;

	@Size(min=0, max=5, message="division must be between 2 and 100 chars")
	@NotEmpty(message="The email address cannot be empty")
	private String division;
	
	@Email(message="Please provide a valid email address")
	@NotEmpty(message="The email address cannot be empty")
	private int grade;
	
	
	@Size(min=2, max=100, message="Name must be between 2 and 100 chars")
	private String name;
	

	private String email;
	
	@Size(min=5, max=100, message="Text must be between 5 and 100 chars")
	private String text;
	
	
}
